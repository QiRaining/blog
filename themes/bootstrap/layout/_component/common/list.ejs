<div class="content">
    <header>
        <!--div class="icon"></div-->
        <span class="badge badge-warning">
        <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>" style="color:#FFFFFF"><%=
            item.date.format(config.date_format) %></a></time>
        </span>
        <%- partial('./title') %>
    </header>
    <div class="entry">
        <% if (item.excerpt){ %>
        <%- item.excerpt %>
        <% } else { %>
        <%- item.content %>
        <% } %>
    </div>
    <footer>
        <% if (item.excerpt){ %>
        <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= __('more') %><div class="icon-eye-open"></div></a>
        </div>
        <% } %>
    </footer>
</div>
